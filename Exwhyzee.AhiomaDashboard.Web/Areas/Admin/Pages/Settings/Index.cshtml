@page
@model Exwhyzee.AhiomaDashboard.Web.Areas.Admin.Pages.Settings.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="card-columns mx-auto d-flex justify-content-center col-12">

        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Setting
                </h3>
            </div>
            <div class="card-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Setting[0].PageSize)
                            </th>
                            <th>Activate Free Delivery</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Setting) {
                        <tr>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.PageSize)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActivateFreeDelivery)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>