@page
@model Exwhyzee.AhiomaDashboard.Web.Areas.Admin.Pages.Markets.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Markets

                    <a asp-page="Create" class="btn btn-light waves-effect pull-right">
                        <i class="bx bx-hourglass bx-spin font-size-16 align-middle mr-2"></i>
                        Create New
                    </a>
                </h3>
            </div>
            <div class="card-body">


                <div id="datatable_wrapper" class="dataTables_wrapper table-responsive dt-bootstrap4 no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable7" class="table table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>S/N</th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Market[0].Name)
                                        </th>
                                        <th>Image</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Market[0].State)
                                        </th>
                                        <th>
                                            Local Government
                                        </th>


                                        <th>
                                            SortOrder
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @{
                                    int sno = 0;
                                }

                                <tbody>

                                    @foreach (var item in Model.Market)
                                    {
                                    <tr>
                                        <td>
                                            @{ sno++; }
                                            @sno
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@item.ImageUrl">
                                                <img src="@item.ImageUrl" style="max-height:30px" />
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LocalGovernment)
                                        </td>
                                       

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SortOrder)
                                        </td>


                                        <td>

                                            <a data-toggle="modal" data-target=".bs-example-modal-sm_@item.Id" style="cursor:pointer;">Details</a>

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div> <!-- end col -->
</div>


@foreach (var item in Model.Market)
{
    <div class="modal fade bs-example-modal-sm_@item.Id" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel_@item.Id" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title mt-0" id="mySmallModalLabel_@item.Id">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4>Name:<br /> @Html.DisplayFor(modelItem => item.Name)</h4>
                    <h6>
                        State:<br />  @Html.DisplayFor(modelItem => item.State)
                    </h6>
                    <h6>
                        LGA:<br />  @Html.DisplayFor(modelItem => item.LocalGovernment)
                    </h6>
                    <h6>
                        Address:<br />  @Html.DisplayFor(modelItem => item.Address)
                    </h6>
                    <p>
                        Supervisor:<br /> @Html.DisplayFor(modelItem => item.User.UserName)
                    </p>
                    <p>
                        Date:<br /> @Html.DisplayFor(modelItem => item.Date)
                    </p>
                    <p>
                        Sort Order:<br /> @Html.DisplayFor(modelItem => item.SortOrder)
                    </p>
                </div>
            </div>
        </div>
    </div>
}