@page
@model Exwhyzee.AhiomaDashboard.Web.Areas.Admin.Pages.SinglePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">

                    <h3 class="card-title">
                        Web Pages

                        <a asp-page="Create" class="btn btn-light waves-effect pull-right">
                            <i class="bx bx-hourglass bx-spin font-size-16 align-middle mr-2"></i>
                            Create New
                        </a>
                    </h3>
                </div>
                <div class="card-body">


                    <div id="datatable_wrapper" class="dataTables_wrapper table-responsive dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="datatable7" class="table table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr role="row">
                                            <th>SN</th>
                                            
                                            <th>
                                                @Html.DisplayNameFor(model => model.WebPages[0].Title)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.WebPages[0].UniqueTitle)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.WebPages[0].PageType)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.WebPages[0].Publish)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.WebPages[0].DateUtc)
                                            </th>
                                        </tr>
                                    </thead>

                                    @{
                                        int sno = 0;
                                    }


                                    <tbody>

                                        @foreach (var item in Model.WebPages)
                                        {
                                        <tr>
                                            <td>
                                                @{ sno++; }
                                                @sno
                                            </td>

                                            <td>
                                                <a asp-page="./Details" asp-route-id="@item.Id">
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UniqueTitle)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PageType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Publish)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateUtc)
                                            </td>
                                        </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div> <!-- end col -->
    </div>

