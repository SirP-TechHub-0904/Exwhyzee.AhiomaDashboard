@page
@model Exwhyzee.AhiomaDashboard.Web.Areas.Admin.Pages.UtilityParameters.CreateModel
@{
}
   

<div class="row">
    <div class="card-columns mx-auto d-flex justify-content-center col-12">

        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Create Utility Parameter


                </h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                    <div class="form-group">
                        <label asp-for="Data.ParamType" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Data.ParamType, new SelectList(Enum.GetValues(typeof(Exwhyzee.Enums.UtilityParam))), new { @class = "form-control" })                        <span asp-validation-for="Data.ParamType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data.Bundle" class="control-label"></label>
                        <input asp-for="Data.Bundle" class="form-control" />
                        <span asp-validation-for="Data.Bundle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data.Code" class="control-label"></label>
                        <input asp-for="Data.Code" class="form-control" />
                        <span asp-validation-for="Data.Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data.Price" class="control-label"></label>
                        <input asp-for="Data.Price" class="form-control" />
                        <span asp-validation-for="Data.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Data.Show" /> @Html.DisplayNameFor(model => model.Data.Show)
                            </label>
                        </div>
                    </div>
                  
                  

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-page="Index" class="btn btn-outline-primary waves-effect waves-light">Back</a>
                    </div>
                </form>

            </div>
        </div>


    </div>
</div>
