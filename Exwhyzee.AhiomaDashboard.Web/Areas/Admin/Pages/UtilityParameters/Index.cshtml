@model Exwhyzee.AhiomaDashboard.Web.Areas.Admin.Pages.UtilityParameters.IndexModel
@{
}
@{ ViewData["Title"] = "Index"; }


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Utility Parameter

                    <a asp-page="Create" class="btn btn-light waves-effect pull-right">
                        <i class="bx bx-hourglass bx-spin font-size-16 align-middle mr-2"></i>
                        Create New
                    </a>
                </h3>
                @if (TempData["error"] != null)
                {
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["error"]</strong>
    </div>}

                @if (TempData["success"] != null)
                {
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["success"]</strong>
    </div>}
            </div>

            <div class="card-body">


                <div id="datatable_wrapper" class="dataTables_wrapper table-responsive dt-bootstrap4 no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable7" class="table table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>SN</th>
                                        <th>
                                           Param Type
                                        </th>
                                        <th>
                                            Bundle
                                        </th>
                                        <th>
                                            Code
                                        </th>
                                        <th>
                                           Price
                                        </th>
                                        
                                        <th>Show</th>
                                    </tr>
                                </thead>

                                @{ int sno = 0; }


                                <tbody>

                                    @foreach (var item in Model.iModel)
                                    {
                                    <tr>

                                        <td>
                                            @{ sno++; }
                                            @sno
                                        </td>

                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id">
                                                @Html.DisplayFor(modelItem => item.ParamType)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Bundle)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>

                                        <td>
                                           

                                            <form>
                                                @Html.DisplayFor(modelItem => item.Show)
                                                <input type="submit" value="Update" class="" />
                                            </form>
                                        </td>
                                    </tr>}


                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div> <!-- end col -->
</div>
