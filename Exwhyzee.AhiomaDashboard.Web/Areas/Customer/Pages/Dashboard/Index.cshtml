<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Latest 10 Transaction</h4>
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap mb-0">
                        <thead class="thead-light">
                            <tr>

                                <th>Id</th>
                                <th>Payment Status</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Amount(Naira)</th>

                                <th>Payment Method</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Transactions)
                            {
                                <tr>
                                    <td>@i.Id</td>
                                    <td> @Html.DisplayFor(modelItem => i.TransactionSection)</td>
                                    <td>@i.DateOfTransaction</td>
                                    <td> @Html.DisplayFor(modelItem => i.Description)</td>
                                    <td> @Html.DisplayFor(modelItem => i.Amount)</td>
                                    <td> @Html.DisplayFor(modelItem => i.Status)</td>


                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>

    

    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">My Top 10 Orders</h4>
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Date</th>
                                <th>Order ID</th>

                                <th>Customer</th>
                                <th>
                                    Items
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Paid
                                </th>

                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItemsUser)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfOrder)
                                    </td>

                                    <td>
                                        <a asp-page="/Transactions/OrderDetails" asp-area="ManageTransaction" asp-route-id="@item.Id">
                                            @Html.DisplayFor(modelItem => item.OrderId)
                                        </a>
                                    </td>

                                    <td>

                                        @Html.DisplayFor(modelItem => item.UserProfile.Fullname)<br />
                                        @Html.DisplayFor(modelItem => item.UserProfile.IdNumber)

                                    </td>

                                    <td>

                                        @item.OrderItems.Count()

                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.OrderAmount)

                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.AmountPaid)

                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>
<!-- end row -->