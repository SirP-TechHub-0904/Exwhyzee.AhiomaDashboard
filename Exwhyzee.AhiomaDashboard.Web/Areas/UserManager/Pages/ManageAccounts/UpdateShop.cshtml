}

<h1>Edit</h1>

<h4>Tenant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tenant.Id" />
            <input type="hidden" asp-for="Tenant.UserId" />
            <input type="hidden" asp-for="Tenant.CreationTime" />
