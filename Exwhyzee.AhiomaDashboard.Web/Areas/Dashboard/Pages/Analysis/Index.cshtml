<div class="row">

    <div class="col-xl-12">
        <div class="card" style="background-color:#222736;">
            <div class="card-body" style="position: relative;">
                <h4 class="card-title mb-4 float-sm-left">My Dashboard</h4>

                <div class="clearfix"></div>
                <label id="lblGreetings" class="tt"></label><br />
                <label class="bb">Together we can make Ahioma Better.</label><br />
                <a asp-page="./Main" class="btn btn-success">Go to Dashboard</a>
            </div>
        </div>
        <input type="hidden" value="@TempData["name"]" id="nmm" />
        <script>
            var myDate = new Date();
            var hrs = myDate.getHours();

            var ioi = document.getElementById('nmm').value;
            console.log(ioi)
            var greet;

            if (hrs < 12)
                greet = 'Good Morning!';
            else if (hrs >= 12 && hrs <= 17)
                greet = 'Good Afternoon!';
            else if (hrs >= 17 && hrs <= 24)
                greet = 'Good Evening!';

            document.getElementById('lblGreetings').innerHTML =
                '<b>' + greet + " " + ioi + '</b> ';</script>
    </div>
</div>
