    <table class="rwd-table" style="margin-top:20px;">
        <tbody>
            <tr>
                <td colspan="6">
                    <h4 style="margin-bottom:4px;margin-top:5px;">Cart (@Model.productCount Items)</h4>

                </td>


            </tr>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th>Action</th>

            </tr>
            @if (Model.ProductCarts != null)
            {
                foreach (var item in Model.ProductCarts)
                {
<tr>
    <td data-th="Item Image">
        <h5>
            @if (item.Product.ProductPictures.FirstOrDefault() != null)
            {
<img src="@item.Product.ProductPictures.FirstOrDefault().PictureUrlThumbnail" style="max-height:70px;" />}
        </h5>
    </td>
    <td data-th="Description">
        <h5 style="margin:0;padding:0;word-break:break-all;">@item.Product.Name</h5>
        <p style="margin:0;padding:0;">
            @if (item.Product.UseColor == true)
            {
<span style="padding:4px;background-color:#cbc9c9;">Color: @item.Itemcolor</span>}
            @if (item.Product.UseSize == true)
            {
<span style="padding:4px;background-color:#cbc9c9;">Size: @item.ItemSize</span>}

        </p>
    </td>
    <td data-th="Quantity">
        <div class="number counting">
            @if (item.Quantity > 1)
            {
<a asp-page="./QuantityIncrease" id="minus" asp-route-id="@item.Id" asp-route-customerRef="" asp-route-qtype="sub"> <span class="minus" style="padding: 5px 5px 5px 5px;font-weight: 900;text-shadow: 1px 1px 1px 1px #000;">-</span></a> }
else
{
<a class="disabled"> <span class="minus" style="background-color:#3d3131;padding: 5px 5px 5px 5px;font-weight: 900;text-shadow: 1px 1px 1px 1px #000;">-</span></a>}
            <input type="text" id="quantity" name="quantity" value="@item.Quantity" readonly />
            <a asp-page="./QuantityIncrease" id="plus" asp-route-id="@item.Id" asp-route-customerRef="" asp-route-qtype="add"> <span class="plus">+</span></a>
        </div>
    </td>
    <td data-th="Price">
        &#8358;@item.Product.Price
    </td>
    <td data-th="Total">
        @{ var result = item.Quantity * item.Product.Price; }
        &#8358;@result

    </td>
    <td data-th="Remove">
        <a class="btn btn-danger" asp-page="./RemovefromCart" asp-route-customerRef="" asp-route-id="@item.Id"><i class="fa fa-close"></i> Remove</a>


    </td>

</tr>
 }
