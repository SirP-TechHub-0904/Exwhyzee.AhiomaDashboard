}

@{ ViewData["Title"] = "Recover Account";
    Layout = "/Pages/Shared/_LoginLayout.cshtml"; }


<div class="">


    @if (TempData["error"] != null)
    {
<div class="alert alert-danger">
    <strong>@TempData["error"]</strong>
</div>}
    <form id="account" class="form" method="post">
        <input asp-for="CustomerRef" type="hidden" />
        <div class="panel">
            <div class="panel-header">
                <h4 class="panel-title text-center text-uppercase" style="color:#ff5c00;font-weight:700;">Recover Account</h4>
            </div>
            <div class="panel-body" style="margin-bottom:0;">


                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" id="input2" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div id="outputmain"></div>
                <div class="form-group">
                    <label style="float:left;">
                        Security Answer
                    </label>
                   
                    <input asp-for="Input.SecurityAnswer" class="form-control"  />
                    <span asp-validation-for="Input.SecurityAnswer" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:100%;background-color:#ff5c00;color:#ffffff;font-weight:800;">Log in</button>
                </div>


            </div>


        </div>
    </form>

</div>

