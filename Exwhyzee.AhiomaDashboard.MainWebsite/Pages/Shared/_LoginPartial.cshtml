@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-customerRef="" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li>
        <a asp-area="Dashboard" asp-page="/Analysis/Index" class="waves-effect">
            Dasboard

</a>    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-customerRef="" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Register" asp-route-customerRef="">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Login" asp-route-customerRef="">Login</a>
    </li>
}
</ul>
