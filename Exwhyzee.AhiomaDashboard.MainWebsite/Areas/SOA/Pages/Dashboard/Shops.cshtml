@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.SOA.Pages.Dashboard.ShopsModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    My Shops (@Model.Stores.Count())


                </h3>
                <h3 class="card-title">

                    @if (Model.UserBool == true)
                    {
                        <a asp-page="/ManageAccounts/CreateStore" asp-area="UserManager" class="btn btn-light waves-effect pull-right">
                            <i class="bx bx-hourglass bx-spin font-size-16 align-middle mr-2"></i>
                            Create New
                        </a>
                    }

                </h3>
                @if (Model.UserBool == false)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Unable to add Shop because your account is being processed.</strong>
                    </div>
                }
            </div>
      
        <div class="card-body">


            <div id="datatable_wrapper" class="dataTables_wrapper table-responsive dt-bootstrap4 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable7" class="table table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th>S/N</th>

                                    <th>
                                        Store Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Market
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @{
                                    int sno = 0;
                                }
                                @foreach (var item in Model.Stores.OrderByDescending(x => x.CreationTime))
                                {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>
                                        <a asp-page="/ManageAccounts/StoreInfo" asp-area="UserManager" asp-route-id="@item.Id">
                                            @Html.DisplayFor(modelItem => item.BusinessName)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Market.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenantAddresses.FirstOrDefault().Address)
                                        <a href="#">
                                            <i class="fa fa-refresh" style="margin-right:5px;"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-page="./AddSoa" asp-route-id="@item.Id">
                                          Add PU
                                        </a>
                                    </td>
                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div> <!-- end col -->
</div>