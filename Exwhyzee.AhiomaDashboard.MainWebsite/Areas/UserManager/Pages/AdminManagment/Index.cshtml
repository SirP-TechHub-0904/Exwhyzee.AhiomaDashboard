@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.UserManager.Pages.AdminManagment.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].WithdrawBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].CreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].LastUpdateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Wallet) {
        <tr>
            <td>
                @await Component.InvokeAsync("FullNameAndID", new { uid = item.UserId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithdrawBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
