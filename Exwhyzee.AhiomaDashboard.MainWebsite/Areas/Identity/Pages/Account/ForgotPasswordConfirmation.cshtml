@page
@model ForgotPasswordConfirmation
@{ ViewData["Title"] = "Forgot password confirmation";
    Layout = "/Pages/Shared/_LoginLayout.cshtml"; }
<div class="sb-breadcrumbs breadcrumb-bg ">
    <ul class="breadcrumb ">
    </ul>
</div>
<div class="main-body clearfix sidebar--left">
    <div class="container">
        <div class="account account--fixed">
            <div class="account-body">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <h2>
                            Please check your email to reset your password.
                        </h2><br />
                        <div>
                            <form asp-page-handler="ResendMail" method="post">
                                <input hidden asp-for="Email" value="@TempData["mail"]" />
                                Didn't get email in 3min <button class="btn btn-primary">click to resend</button>
                            </form>

                        </div>

                    </div>
                    <div class="col-md-3"></div>
                </div>

            </div>
        </div>

    </div>

</div>
