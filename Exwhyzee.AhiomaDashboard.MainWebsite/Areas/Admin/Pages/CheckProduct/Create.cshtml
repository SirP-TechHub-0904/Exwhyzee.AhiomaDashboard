@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.Admin.Pages.CheckProduct.CreateModel
@{
}
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Add Product Querry
                </h3>
            </div>
            <div class="card-body table-responsive">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Data.UserCode" class="control-label">User Id Number</label>
                        <input asp-for="Data.UserCode" class="form-control" />
                        <span asp-validation-for="Data.UserCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data.ProductId" class="control-label">Product Id</label>
                        <input asp-for="Data.ProductId" class="form-control" />
                        <span asp-validation-for="Data.ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data.Note" class="control-label">Note</label>
                        <input asp-for="Data.Note" class="form-control" />
                        <span asp-validation-for="Data.Note" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="/CheckProduct/Index" class="btn btn-danger">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
