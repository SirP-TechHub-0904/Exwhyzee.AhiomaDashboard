@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.Admin.Pages.CheckProduct.IndexModel
@{
}
<div class="row">


    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    List Product Modification
                </h3>
                <a asp-page="Create" class="btn btn-primary btn-sm">Add New</a>

            </div>
            <div class="card-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>Name</th>
                            <th>Shop</th>
                            <th>Note</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>
                                    @item.UserProfile.IdNumber 
                                </td>

                                <td>
                                    @item.UserProfile.Fullname
                                </td>
                                <td>
                                    @item.Product.Name -
                                    @item.Tenant.BusinessName
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>

                               <td>
                                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>

                            </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>