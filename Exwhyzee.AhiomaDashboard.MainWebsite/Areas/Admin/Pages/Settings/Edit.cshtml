@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.Admin.Pages.Settings.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="card-columns mx-auto d-flex justify-content-center col-12">

        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Edit Setting
                </h3>
            </div>
            <div class="card-body">

                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Setting.Id" />
                            <div class="form-group">
                                <label asp-for="Setting.PageSize" class="control-label"></label>
                                <input asp-for="Setting.PageSize" class="form-control" />
                                <span asp-validation-for="Setting.PageSize" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Setting.ActivateFreeDelivery" class="control-label"></label>
                                <input asp-for="Setting.ActivateFreeDelivery" class="form-control" />
                                <span asp-validation-for="Setting.ActivateFreeDelivery" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
