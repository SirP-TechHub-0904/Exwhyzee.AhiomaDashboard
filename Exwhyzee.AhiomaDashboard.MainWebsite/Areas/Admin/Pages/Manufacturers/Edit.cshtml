@page
@model Exwhyzee.AhiomaDashboard.MainWebsite.Areas.Admin.Pages.Manufacturers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="card-columns mx-auto d-flex justify-content-center col-12">

        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    Edit Manufacturer
                </h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Manufacturer.Id" />
                    <div class="form-group">
                        <label asp-for="Manufacturer.Name" class="control-label"></label>
                        <input asp-for="Manufacturer.Name" class="form-control" />
                        <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.Description" class="control-label"></label>
                        <input asp-for="Manufacturer.Description" class="form-control" />
                        <span asp-validation-for="Manufacturer.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.Address" class="control-label"></label>
                        <input asp-for="Manufacturer.Address" class="form-control" />
                        <span asp-validation-for="Manufacturer.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.Status" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Manufacturer.Status, new SelectList(Enum.GetValues(typeof(Exwhyzee.Enums.EntityStatus))), new { @class = "form-control" })
                        <span asp-validation-for="Manufacturer.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="Index" class="btn btn-outline-primary waves-effect waves-light">Back</a>
                    </div>
                </form>

            </div>
        </div>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
